<footer>
    <nav class="pagination" role="navigation">
        {{#if prev}}
        <a class="page previous newer-posts" href="{{page_url prev}}">Вперед</a>
        {{else}}
        <div class="spacer"></div>
        {{/if}}
        <span class="page-number">Страница {{page}} of {{pages}}</span>
        {{#if next}}
        <a class="page next older-posts" href="{{page_url next}}">Назад</a>
        {{else}}
        <div class="spacer"></div>
        {{/if}}
    </nav>
</footer>
